<div class="container m-t-30">
    <div class="widget clearfix">
        <!-- /widget heading -->
        <div class="widget-heading">
            <div align="center">
                <h3 class="widget-title text-dark">
                    Online  Payment  Verification
                </h3>
            </div>
            <div class="clearfix"></div>
        </div>

        <div class="widget-body">

            <div class="row">
                <div class="col-sm-12 margin-b-30">
                    <div align="center">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>Transaction Id</td>
                                    <td>
                                        <input type="text" value="" placeholder="Enter your Transaction Number" />
                                    </td>
                                </tr>
                                <tr>
                                    @Html.BeginForm("VerifyPayment", "Payment",FormMethod.Post)
                                    {
                                       <td colspan="2">
                                        <input type="submit" value=" Verify " class="btn btn-lg theme-btn" />
                                       </td>
                                    }
                                </tr>


                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
